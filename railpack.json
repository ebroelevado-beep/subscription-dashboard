{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "22"
  },
  "steps": {
    "build": {
      "commands": [
        { "src": ".", "dest": "." },
        { "cmd": "pnpm build" },
        { "cmd": "cp -r public .next/standalone/public" },
        { "cmd": "cp -r .next/static .next/standalone/.next/static" }
      ],
      "variables": {
        "NODE_OPTIONS": "--max-old-space-size=4096"
      }
    }
  },
  "caches": {
    "pnpm": {
      "path": "/root/.local/share/pnpm/store/v3"
    },
    "next": {
      "path": ".next/cache"
    }
  },
  "deploy": {
    "startCommand": "node .next/standalone/server.js",
    "variables": {
      "NODE_ENV": "production"
    }
  },
  "secrets": ["DATABASE_URL", "AUTH_SECRET", "NEXTAUTH_URL"]
}
