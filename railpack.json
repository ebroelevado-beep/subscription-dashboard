{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "22"
  },
  "steps": {
    "build": {
      "commands": [
        "pnpm build",
        "cp -r public .next/standalone/public",
        "cp -r .next/static .next/standalone/.next/static",
        "cp -rL node_modules/.pnpm/@github+copilot@0.0.411/node_modules/@github/copilot .next/standalone/copilot-cli"
      ],
      "variables": {
        "NODE_OPTIONS": "--max-old-space-size=4096",
        "NEXT_CPU_COUNT": "4"
      }
    }
  },
  "deploy": {
    "startCommand": "pnpm prisma migrate deploy && node .next/standalone/server.js",
    "variables": {
      "NODE_ENV": "production",
      "HOSTNAME": "0.0.0.0",
      "AUTH_TRUST_HOST": "true"
    }
  },
  "secrets": ["DATABASE_URL"]
}
